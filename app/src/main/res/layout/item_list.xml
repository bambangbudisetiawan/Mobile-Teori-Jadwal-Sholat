<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/itemlist_cv"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textAlignment="center"
            android:textSize="25dp"
            android:textStyle="bold"
            android:text="JADWAL WAKTU SHOLAT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <View android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#bbb"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:textStyle="bold"
                android:textSize="20dp"
                android:paddingTop="15dp"
                android:text="Lokasi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_timezone"
                android:paddingTop="19dp"
                android:paddingLeft="10dp"
                android:textSize="15dp"
                android:text="Value"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>

            <TextView
                android:textStyle="bold"
                android:paddingLeft="20dp"
                android:textSize="20dp"
                android:paddingTop="15dp"
                android:text="Tanggal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_readable"
                android:paddingLeft="10dp"
                android:paddingTop="20dp"
                android:textSize="15dp"
                android:text="Value"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:textStyle="bold"
                android:textSize="20dp"
                android:paddingTop="15dp"
                android:text="Majelis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_majelis"
                android:paddingTop="19dp"
                android:paddingLeft="10dp"
                android:textSize="15dp"
                android:text="Value"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:textStyle="bold"
                android:paddingLeft="8dp"
                android:textSize="20dp"
                android:paddingTop="15dp"
                android:text="Hijriah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_hijriah"
                android:paddingLeft="10dp"
                android:paddingTop="20dp"
                android:textSize="15dp"
                android:text="Value"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>

            <TextView
                android:textStyle="bold"
                android:paddingLeft="20dp"
                android:textSize="20dp"
                android:paddingTop="15dp"
                android:text="Hari Ke-"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_day"
                android:paddingTop="20dp"
                android:textSize="15dp"
                android:text="Value"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>

            <TextView
                android:textStyle="bold"
                android:paddingLeft="20dp"
                android:textSize="20dp"
                android:paddingTop="15dp"
                android:text="Bulan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_bulan_hijriah"
                android:paddingTop="20dp"
                android:paddingLeft="10dp"
                android:textSize="15dp"
                android:text="Value"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>

        </LinearLayout>

        <TextView
            android:paddingTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <View android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#bbb"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="20dp"
                android:paddingTop="15dp"
                android:text="Subuh"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:textStyle="bold"
                android:paddingLeft="35dp"
                android:textSize="20dp"
                android:paddingTop="15dp"
                android:text="Dzuhur"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:textStyle="bold"
                android:paddingLeft="35dp"
                android:textSize="20dp"
                android:paddingTop="15dp"
                android:text="Ashar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:textStyle="bold"
                android:paddingLeft="35dp"
                android:textSize="20dp"
                android:paddingTop="15dp"
                android:text="Maghrib"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
            android:id="@+id/tv_subuh"
            android:paddingLeft="12dp"
            android:textSize="15dp"
            android:text="Value"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

            <TextView
                android:id="@+id/tv_dzuhur"
                android:paddingLeft="16dp"
                android:textSize="15dp"
                android:text="Value"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>

            <TextView
                android:id="@+id/tv_ashar"
                android:paddingLeft="19dp"
                android:textSize="15dp"
                android:text="Value"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>

            <TextView
                android:id="@+id/tv_maghrib"
                android:paddingLeft="24dp"
                android:textSize="15dp"
                android:text="Value"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="30dp"
                android:paddingTop="15dp"
                android:text="Isya"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:textStyle="bold"
                android:paddingLeft="45dp"
                android:textSize="20dp"
                android:paddingTop="15dp"
                android:text="Imsak"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:textStyle="bold"
                android:paddingLeft="35dp"
                android:textSize="20dp"
                android:paddingTop="15dp"
                android:text="Sunrise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:textStyle="bold"
                android:paddingLeft="25dp"
                android:textSize="20dp"
                android:paddingTop="15dp"
                android:text="Sunset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_isya"
                android:paddingLeft="12dp"
                android:textSize="15dp"
                android:text="Value"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>

            <TextView
                android:id="@+id/tv_imsak"
                android:paddingLeft="16dp"
                android:textSize="15dp"
                android:text="Value"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>

            <TextView
                android:id="@+id/tv_sunrise"
                android:paddingLeft="19dp"
                android:textSize="15dp"
                android:text="Value"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>

            <TextView
                android:id="@+id/tv_sunset"
                android:paddingLeft="24dp"
                android:textSize="15dp"
                android:text="Value"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>

        </LinearLayout>

        <TextView
            android:paddingTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <View android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#bbb"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>